# Environment
NODE_ENV=production

# Server Port (for local development only, not used in Vercel)
PORT=5002

# MongoDB Connection (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/retail-relay?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173
